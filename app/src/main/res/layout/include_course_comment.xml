<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:drawableLeft="@drawable/course_comment"
        android:drawablePadding="@dimen/dm010"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dm010"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:text="评论（0）"
        android:textColor="@color/gray333"
        android:textSize="@dimen/dm026" />

    <include layout="@layout/line_1" />

    <com.risenb.expand.xrecyclerview.XRecyclerView
        android:id="@+id/rv_course_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm090"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="@dimen/dm005"
        android:drawableRight="@drawable/course_load"
        android:gravity="center_vertical"
        android:text="查看更多"
        android:textColor="@color/gray666"
        android:textSize="@dimen/dm026"
        android:visibility="gone" />
</LinearLayout>