<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:drawableLeft="@drawable/course_master"
        android:drawablePadding="@dimen/dm010"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dm010"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:text="教师"
        android:textColor="@color/gray333"
        android:textSize="@dimen/dm026" />

    <include layout="@layout/line_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm188"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020">

        <ImageView
            android:id="@+id/iv_teacher_cover"
            android:layout_width="@dimen/dm108"
            android:layout_height="@dimen/dm108"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿光森林"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="绿光森林绿光森林绿光森林绿光森林绿光森林绿光森林"
                android:textColor="@color/gray666"
                android:textSize="@dimen/dm024" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_teacher_video_count"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="共42节课"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评率："
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:id="@+id/tv_teacher_video_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90%"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/dm022" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>