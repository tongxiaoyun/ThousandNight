<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm088">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm030">

            <ImageView
                android:layout_width="@dimen/dm018"
                android:layout_height="@dimen/dm032"
                android:scaleType="fitXY"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_found_news_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm060"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm100"
            android:layout_marginRight="@dimen/dm030"
            android:background="@drawable/sp_gray_bg_cor40"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm030"
            android:text="请输入关键字搜索新闻信息"
            android:textColor="@color/gray999"
            android:textSize="@dimen/dm024" />

    </RelativeLayout>

    <include layout="@layout/line_1" />

</LinearLayout>