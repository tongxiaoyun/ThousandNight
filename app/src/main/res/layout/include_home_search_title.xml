<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm088"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm020">

        <LinearLayout
            android:layout_width="@dimen/dm000"
            android:layout_height="@dimen/dm060"
            android:layout_weight="1"
            android:background="@drawable/sp_gray_bd_cor40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/found_down"
                android:gravity="center"
                android:paddingLeft="@dimen/dm030"
                android:paddingRight="@dimen/dm020"
                android:text="课程"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm024" />

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入关键字"
                android:maxLines="1"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm030"
                android:textColor="@color/gray333"
                android:textColorHint="@color/gray999"
                android:textSize="@dimen/dm024" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm020"
            android:text="取消"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm024" />

    </LinearLayout>

    <include layout="@layout/line_1" />

</LinearLayout>