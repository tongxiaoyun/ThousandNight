<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm088"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_search"
            android:layout_width="@dimen/dm000"
            android:layout_height="@dimen/dm060"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_weight="1"
            android:background="@drawable/sp_gray_bg_cor40"
            android:drawableLeft="@drawable/home_search"
            android:drawablePadding="@dimen/dm015"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm025"
            android:paddingRight="@dimen/dm025"
            android:text="搜索课程 | 音乐 | 视频"
            android:textColor="@color/gray999"
            android:textSize="@dimen/dm024" />

        <ImageView
            android:id="@+id/iv_home_look_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="@dimen/dm020"
            android:paddingLeft="@dimen/dm030"
            android:paddingRight="@dimen/dm020"
            android:paddingTop="@dimen/dm020"
            android:src="@drawable/home_record" />

        <ImageView
            android:id="@+id/iv_home_download_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="@dimen/dm020"
            android:paddingLeft="@dimen/dm015"
            android:paddingRight="@dimen/dm030"
            android:paddingTop="@dimen/dm020"
            android:src="@drawable/home_download" />

    </LinearLayout>

    <include layout="@layout/line_1" />

</LinearLayout>