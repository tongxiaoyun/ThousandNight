<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:paddingTop="@dimen/dm030">

        <ImageView
            android:id="@+id/iv_comment_icon"
            android:layout_width="@dimen/dm065"
            android:layout_height="@dimen/dm065"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_icon" />

        <TextView
            android:id="@+id/tv_comment_nickname"
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm015"
            android:layout_weight="1"
            android:text="绿光森林"
            android:textColor="@color/gray999"
            android:textSize="@dimen/dm022" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm015"
            android:text="2018-05-22"
            android:textColor="@color/gray999"
            android:textSize="@dimen/dm022" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_marginTop="@dimen/dm030"
        android:lineSpacingExtra="@dimen/dm005"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:text="陈独秀，臣独秀，，就是夸人优秀的一种说法，讲这个人很秀，很666的意思 同理蒂花之秀，造化钟神秀、维多利亚的秘密内衣秀等等，蒂花之秀"
        android:textColor="@color/gray333"
        android:textSize="@dimen/dm028" />

    <include layout="@layout/line_1" />
</LinearLayout>