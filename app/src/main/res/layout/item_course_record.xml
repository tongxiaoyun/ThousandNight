<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dm270"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dm010"
    android:paddingRight="@dimen/dm010"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dm250"
        android:layout_height="@dimen/dm160"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dm010"
        android:singleLine="true"
        android:text="d第一集 整套价格整套价格整套价格"
        android:textColor="@color/gray333"
        android:textSize="@dimen/dm026" />
</LinearLayout>