<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_news_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dm030"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:paddingTop="@dimen/dm035">

            <ImageView
                android:id="@+id/iv_news_img"
                android:layout_width="@dimen/dm122"
                android:layout_height="@dimen/dm122"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm122"
                android:layout_marginLeft="@dimen/dm030"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="千夜是一个舞蹈教学平台，在这里你可以学到很多专业的舞蹈知识"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm000"
                    android:layout_weight="1"
                    android:gravity="center_vertical|bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_news_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/found_look"
                        android:drawablePadding="@dimen/dm010"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/dm020" />

                    <TextView
                        android:id="@+id/tv_news_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm035"
                        android:drawableLeft="@drawable/found_zan"
                        android:drawablePadding="@dimen/dm010"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/dm020" />

                    <View
                        android:layout_width="@dimen/dm000"
                        android:layout_height="@dimen/dm001"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_news_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm020"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="2018-03-22"
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/dm020" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/line_1" />

    </LinearLayout>

    <include layout="@layout/include_banner" />

</LinearLayout>