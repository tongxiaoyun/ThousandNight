<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dm050"
    android:paddingRight="@dimen/dm020">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm226">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm226"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/home_play"
            android:drawablePadding="@dimen/dm010"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/dm010"
            android:paddingLeft="@dimen/dm015"
            android:paddingRight="@dimen/dm015"
            android:text="185.6万"
            android:textColor="@color/white"
            android:textSize="@dimen/dm020" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Selina现代舞教学视频"
        android:textColor="@color/gray333"
        android:textSize="@dimen/dm024" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm015"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dm085"
            android:layout_height="@dimen/dm030"
            android:background="@drawable/sp_purple_bd_cor"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="现代舞"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm020" />

        <TextView
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="共20集"
            android:textColor="@color/gray999"
            android:textSize="@dimen/dm020" />

    </LinearLayout>

</LinearLayout>