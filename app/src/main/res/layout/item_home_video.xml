<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dm050"
    android:paddingRight="@dimen/dm020">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm226">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm226"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/home_play"
            android:drawablePadding="@dimen/dm010"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/dm010"
            android:paddingLeft="@dimen/dm015"
            android:paddingRight="@dimen/dm015"
            android:text="185.6万"
            android:textColor="@color/white"
            android:textSize="@dimen/dm020" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tony爵士舞视频"
        android:textColor="@color/gray333"
        android:textSize="@dimen/dm024" />

</LinearLayout>