<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm025"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm025"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dm250"
            android:layout_height="@dimen/dm139"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm139"
            android:layout_marginLeft="@dimen/dm020"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="舞蹈教学视频"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm030"
                android:layout_marginTop="@dimen/dm010"
                android:background="@drawable/sp_purple_bd_cor"
                android:gravity="center"
                android:paddingLeft="@dimen/dm010"
                android:paddingRight="@dimen/dm010"
                android:text="现代舞"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/dm020" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm000"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm005"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_course_date"
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="有效期至: 2018-08-22"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm020" />

                <TextView
                    android:id="@+id/tv_course_episode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="共13集"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm020" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_20" />

</LinearLayout>