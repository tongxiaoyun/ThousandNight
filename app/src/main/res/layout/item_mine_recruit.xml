<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm090"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:text="拉丁舞教练"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm028" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6K-10K"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/dm028" />

        </LinearLayout>

        <include layout="@layout/line_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_marginTop="@dimen/dm020"
            android:text="工作内容：1.学历不限，专业不限；\n
                  2.有销售经验，对舞蹈瑜伽健身行业有了解；\n
                  3.具备良好的沟通能力和销售技巧；\n
                  4.有一定的客户资源，能够做销售业绩报表。"
            android:textColor="@color/gray666"
            android:textSize="@dimen/dm024" />

        <include layout="@layout/line_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm090"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mine_addr"
                    android:drawablePadding="@dimen/dm010"
                    android:gravity="center"
                    android:text="北京"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/dm024" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mine_time"
                    android:drawablePadding="@dimen/dm010"
                    android:gravity="center"
                    android:text="3-5年"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/dm024" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mine_grade"
                    android:drawablePadding="@dimen/dm010"
                    android:gravity="center"
                    android:text="专业级"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/dm024" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_20" />

</LinearLayout>