<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm115"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm030"
        android:paddingRight="@dimen/dm020">

        <TextView
            android:id="@+id/tv_vip_open_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1个月"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <TextView
            android:id="@+id/tv_vip_open_price"
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="¥ 112.00"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm026" />

        <TextView
            android:id="@+id/tv_vip_open_status"
            android:layout_width="@dimen/dm145"
            android:layout_height="@dimen/dm052"
            android:layout_marginLeft="@dimen/dm045"
            android:background="@drawable/sp_purple_bg_cor"
            android:gravity="center"
            android:text="立即开通"
            android:textColor="@color/white"
            android:textSize="@dimen/dm022" />

    </LinearLayout>

    <include layout="@layout/line_1" />

</LinearLayout>