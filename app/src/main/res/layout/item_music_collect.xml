<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm190"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dm035"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:paddingTop="@dimen/dm035">

        <ImageView
            android:layout_width="@dimen/dm120"
            android:layout_height="@dimen/dm120"
            android:adjustViewBounds="true"
            android:src="@drawable/default_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm030"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="深深的印在你脑海在你脑海的歌曲"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm028" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm055"
                android:text="共100首"
                android:textColor="@color/gray999"
                android:textSize="@dimen/dm024" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line_1" />
</LinearLayout>