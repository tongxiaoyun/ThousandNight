<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm098"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dm080"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_music_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/music_music"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item_music_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/gray999"
                android:textSize="@dimen/dm026" />
        </RelativeLayout>


        <TextView
            android:layout_width="@dimen/dm000"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="我们都一样"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm028" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dm020"
            android:src="@drawable/music_cancle" />

    </LinearLayout>

    <include layout="@layout/line_1" />

</LinearLayout>