<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm190"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020">

        <CheckBox
            android:id="@+id/cb_select_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dm030"
            android:background="@drawable/sl_mine_feature"
            android:button="@null"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/dm185"
            android:layout_height="@dimen/dm125"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm030"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="Hebe现代舞教学视频现代舞教学视频现代舞教学视频"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm024" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm020"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥  99.00"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已购买"
                    android:textColor="#fe396e"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm050"
                    android:text="第1集"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/line_1" />
</LinearLayout>