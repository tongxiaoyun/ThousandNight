<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_square_hot_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dm015"
        android:paddingRight="@dimen/dm015"
        android:paddingLeft="@dimen/dm015"
        android:paddingTop="@dimen/dm030">

        <ImageView
            android:id="@+id/iv_hot_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm348"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

        <TextView
            android:id="@+id/tv_hot_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="今日拉丁舞学习"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm024" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm015"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_hot_icon"
                android:layout_width="@dimen/dm060"
                android:layout_height="@dimen/dm060"
                android:src="@drawable/default_icon" />

            <TextView
                android:id="@+id/tv_hot_nickname"
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="绿森林"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm020" />

            <TextView
                android:id="@+id/tv_hot_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:layout_marginRight="@dimen/dm010"
                android:drawableLeft="@drawable/found_message"
                android:drawablePadding="@dimen/dm010"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/gray999"
                android:textSize="@dimen/dm020" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_square_top" />

</LinearLayout>