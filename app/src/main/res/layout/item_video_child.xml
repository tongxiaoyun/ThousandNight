<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dm020">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm025"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm462">

            <ImageView
                android:id="@+id/iv_video_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm462"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm462"
                android:background="@color/black_20" />

            <ImageView
                android:id="@+id/iv_video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/home_video_play" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_video_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Selina现代舞教学视频现代舞教学视频"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm024" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_video_icon"
                android:layout_width="@dimen/dm060"
                android:layout_height="@dimen/dm060"
                android:src="@drawable/default_icon" />

            <TextView
                android:id="@+id/tv_video_nickname"
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="一只大猩猩"
                android:textColor="@color/gray999"
                android:textSize="@dimen/dm020" />

            <RelativeLayout
                android:id="@+id/rl_video_message"
                android:layout_width="@dimen/dm070"
                android:layout_height="@dimen/dm060">

                <ImageView
                    android:id="@+id/iv_video_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/home_video_message" />

                <TextView
                    android:id="@+id/tv_video_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_video_message"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/dm016" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_video_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dm010"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm010"
                android:paddingTop="@dimen/dm010"
                android:src="@drawable/home_video_collect" />

            <ImageView
                android:id="@+id/iv_video_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dm010"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm010"
                android:paddingTop="@dimen/dm010"
                android:src="@drawable/home_video_download" />

            <ImageView
                android:id="@+id/iv_video_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dm010"
                android:paddingLeft="@dimen/dm020"
                android:paddingTop="@dimen/dm010"
                android:src="@drawable/home_video_share" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_20" />

</LinearLayout>