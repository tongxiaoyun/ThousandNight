<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm660"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm085"
            android:background="#f2f2f2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm020"
            android:text="添加到歌单"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm028" />

        <TextView
            android:id="@+id/tv_add_sheet_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm098"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:text="新建歌单"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm028" />

        <include layout="@layout/line_1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_add_sheet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm000"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>