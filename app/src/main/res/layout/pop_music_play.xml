<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm940"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm085"
            android:background="#f2f2f2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dm020"
                android:text="播放列表（10）"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm028" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm050"
                android:src="@drawable/music_down" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm050"
                android:src="@drawable/music_add" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm030"
                android:src="@drawable/music_delete" />

        </LinearLayout>

        <include layout="@layout/line_1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pop_music_play"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm000"
            android:layout_weight="1"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_pop_music_play_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm100"
            android:background="#f2f2f2"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm030" />


    </LinearLayout>

</RelativeLayout>