<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translete"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dm750"
        android:layout_height="@dimen/dm300"
        android:padding="@dimen/dm020"
        android:background="@drawable/search_type_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/dm020">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm000"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="课程"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/dm030" />

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="@dimen/dm040"
                android:background="@color/line" />


            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="音乐"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="@dimen/dm040"
                android:background="@color/line" />


            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="视频"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />


        </LinearLayout>

        <include layout="@layout/line_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm000"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="用户"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="@dimen/dm040"
                android:background="@color/line" />


            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="动态"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="@dimen/dm040"
                android:background="@color/line" />


            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="千夜信息"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />

        </LinearLayout>

        <include layout="@layout/line_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm000"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="相册"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="@dimen/dm040"
                android:background="@color/line" />


            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text=""
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="@dimen/dm040"
                android:background="@color/line" />


            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text=""
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>