<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sex_boy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm085"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/gray666"
            android:textSize="@dimen/dm030" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tv_sex_girl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm085"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/gray666"
            android:textSize="@dimen/dm030" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm085"
        android:background="@color/gray"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/gray666"
        android:textSize="@dimen/dm030" />

</LinearLayout>