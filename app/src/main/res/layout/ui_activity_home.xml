<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1">


        <com.risenb.expand.xrecyclerview.XRecyclerView
            android:id="@+id/xrv_activity_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_top_4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm088">

                <RelativeLayout
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dm030"
                    android:paddingRight="@dimen/dm030">

                    <ImageView
                        android:layout_width="@dimen/dm018"
                        android:layout_height="@dimen/dm032"
                        android:scaleType="fitXY"
                        android:src="@drawable/back_white" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="标题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm030" />

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <include layout="@layout/include_bottom" />
</LinearLayout>