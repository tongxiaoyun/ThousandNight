<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:layout_marginTop="@dimen/dm040"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_forget_pwd_phone"
            style="@style/login_edit_style"
            android:hint="请输入您的手机号"
            android:inputType="phone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:layout_marginTop="@dimen/dm020"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_forget_pwd_code"
            style="@style/login_edit_style"
            android:hint="请输入您的验证码"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_forget_pwd_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:layout_marginTop="@dimen/dm020"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码    "
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_forget_pwd_pwd"
            style="@style/login_edit_style"
            android:hint="请输入您的密码"
            android:inputType="textPassword" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_forget_pwd_confirm"
        style="@style/login_text_style"
        android:layout_marginLeft="@dimen/dm135"
        android:layout_marginRight="@dimen/dm135"
        android:layout_marginTop="@dimen/dm085"
        android:text="确认" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1"
        android:background="@drawable/login_bg"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>