<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm088"
                android:gravity="center"
                android:paddingLeft="@dimen/dm030"
                android:paddingRight="@dimen/dm030">

                <ImageView
                    android:layout_width="@dimen/dm018"
                    android:layout_height="@dimen/dm032"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_white" />
            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dm030"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginRight="@dimen/dm030"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/found_img_2"
                android:drawablePadding="@dimen/dm010"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="120"
                android:textColor="@color/white"
                android:textSize="@dimen/dm020" />

            <View
                android:layout_width="@dimen/dm000"
                android:layout_height="@dimen/dm001"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/found_download"
                android:drawablePadding="@dimen/dm010"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="120"
                android:textColor="@color/white"
                android:textSize="@dimen/dm020" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:drawableLeft="@drawable/found_look_2"
                android:drawablePadding="@dimen/dm010"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="120"
                android:textColor="@color/white"
                android:textSize="@dimen/dm020" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:drawableLeft="@drawable/found_share_2"
                android:drawablePadding="@dimen/dm010"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="120"
                android:textColor="@color/white"
                android:textSize="@dimen/dm020" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>