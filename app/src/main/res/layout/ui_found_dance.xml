<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <include layout="@layout/line_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm085"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_found_dance_1"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_found_dance_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/found_down"
                android:text="北京"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_found_dance_2"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_found_dance_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/found_down"
                android:text="位置"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_found_dance_3"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_found_dance_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/found_down"
                android:text="舞种"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_found_dance_4"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_found_dance_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/found_down"
                android:text="性别"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm010"
        android:background="@color/gray" />

    <com.risenb.expand.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_found_dance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_found_dance_publish"
        android:layout_width="@dimen/dm126"
        android:layout_height="@dimen/dm126"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dm025"
        android:layout_marginTop="@dimen/dm020"
        android:background="@drawable/sp_purple_oval"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dm003"
            android:drawableTop="@drawable/found_publish"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/dm024" />

    </LinearLayout>

    <include layout="@layout/include_bottom" />

</LinearLayout>