<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_found_news_title" />

    <HorizontalScrollView
        android:id="@+id/hsv_found_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dm085"
            android:background="@color/white"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_found_news"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm082"
                android:orientation="horizontal"></RadioGroup>

            <View
                android:id="@+id/v_found_news_indicator"
                android:layout_width="@dimen/dm055"
                android:layout_height="@dimen/dm003"
                android:background="@color/tab_color" />
        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_found_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>