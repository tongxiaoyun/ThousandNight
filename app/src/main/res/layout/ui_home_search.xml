<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_home_search_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm082"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dm020"
        android:text="搜索历史"
        android:textColor="@color/gray999"
        android:textSize="@dimen/dm026" />

    <include layout="@layout/line_1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>