<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:layout_marginTop="@dimen/dm040"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_login_phone"
            style="@style/login_edit_style"
            android:hint="请输入您的手机号"
            android:inputType="phone" />

        <ImageView
            android:id="@+id/iv_login_status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_correct"
            android:visibility="invisible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:layout_marginTop="@dimen/dm020"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码    "
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_login_pwd"
            style="@style/login_edit_style"
            android:hint="请输入您的密码"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/iv_login_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_error"
            android:visibility="invisible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_login_login"
        style="@style/login_text_style"
        android:layout_marginLeft="@dimen/dm135"
        android:layout_marginRight="@dimen/dm135"
        android:layout_marginTop="@dimen/dm085"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm130"
        android:layout_marginRight="@dimen/dm130"
        android:layout_marginTop="@dimen/dm020"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dm020"
            android:paddingTop="@dimen/dm020"
            android:text="忘了密码?"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="@dimen/dm000"
            android:layout_height="@dimen/dm001"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dm020"
            android:paddingTop="@dimen/dm020"
            android:text="立即注册>"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm030"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_login_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_weixin" />

        <ImageView
            android:id="@+id/tv_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm090"
            android:src="@drawable/login_qq" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm070"
        android:layout_marginRight="@dimen/dm070"
        android:layout_marginTop="@dimen/dm060"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_line_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm025"
            android:layout_marginRight="@dimen/dm025"
            android:text="第三方授权登录"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm024" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_line_2" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm245"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg" />

</LinearLayout>