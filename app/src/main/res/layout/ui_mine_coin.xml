<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm450"
        android:background="@drawable/home_sign_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/include_mine_coin_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm050"
            android:drawableLeft="@drawable/mine_coin"
            android:drawablePadding="@dimen/dm005"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="120"
            android:textColor="@color/white"
            android:textSize="@dimen/dm050"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm030"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="累计得到千夜币:  8888"
            android:textColor="@color/white"
            android:textSize="@dimen/dm026" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dm050"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm030"
            android:background="@drawable/sp_offwhite_bg_cor40"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:text="今日已签到"
            android:textColor="@color/white"
            android:textSize="@dimen/dm022" />

    </LinearLayout>

    <com.risenb.expand.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_mine_coin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1"></com.risenb.expand.xrecyclerview.XRecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_coin_recharge"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tab_color"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="@dimen/dm026" />

        <TextView
            android:id="@+id/tv_coin_exchange"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffb400"
            android:gravity="center"
            android:text="兑换"
            android:textColor="@color/white"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

</LinearLayout>