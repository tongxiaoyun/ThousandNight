<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <include layout="@layout/line_1" />

    <LinearLayout
        android:id="@+id/ll_exchange_result_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm088"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换码:"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />

            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="1234567890987654321"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm024" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm088"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可兑换千夜币:"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm026" />

            <TextView
                android:layout_width="@dimen/dm000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="30"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm024" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:background="@color/line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm000"
            android:layout_weight="1" />

        <TextView
            style="@style/text_style"
            android:layout_marginBottom="@dimen/dm085"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm020"
            android:text="确认兑换" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_exchange_result_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm135"
        android:layout_marginRight="@dimen/dm135"
        android:layout_marginTop="@dimen/dm050"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dm010"
        android:text="您输入的兑换码不正确，请再次确认您的兑换码。"
        android:textColor="@color/gray333"
        android:textSize="@dimen/dm028"
        android:visibility="gone" />

</LinearLayout>