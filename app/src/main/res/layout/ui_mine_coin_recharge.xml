<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <include layout="@layout/line_1" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm112"
            android:button="@null"
            android:drawableLeft="@drawable/mine_weixin"
            android:drawablePadding="@dimen/dm020"
            android:drawableRight="@drawable/sl_mine_feature"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:text="使用微信支付"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/line" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm112"
            android:button="@null"
            android:drawableLeft="@drawable/mine_alipay"
            android:drawablePadding="@dimen/dm020"
            android:drawableRight="@drawable/sl_mine_feature"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:text="使用支付宝支付"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

    </RadioGroup>

    <include layout="@layout/line_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm035"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm073"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@drawable/sp_gray_bd_cor"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入充值金额"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:textColor="@color/gray333"
            android:textColorHint="@color/gray999"
            android:textSize="@dimen/dm024" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm035"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm025"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_coin_2"
            android:drawablePadding="@dimen/dm020"
            android:gravity="center"
            android:text="千夜币:"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm024" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm010"
            android:text="0"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm024" />

    </LinearLayout>

    <include layout="@layout/line_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_coin_recharge_confirm"
        style="@style/text_style"
        android:layout_marginBottom="@dimen/dm085"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:text="确定充值"/>

</LinearLayout>