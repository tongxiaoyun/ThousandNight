<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm098"
        android:layout_margin="@dimen/dm020"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm045"
        android:paddingRight="@dimen/dm045">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_old_pwd"
            android:drawablePadding="@dimen/dm030"
            android:gravity="center"
            android:text="旧密码    "
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            style="@style/edit_style"
            android:hint="请输入旧密码"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm098"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm045"
        android:paddingRight="@dimen/dm045">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_pwd"
            android:drawablePadding="@dimen/dm030"
            android:gravity="center"
            android:text="新密码    "
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            style="@style/edit_style"
            android:hint="请输入新密码"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm098"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm045"
        android:paddingRight="@dimen/dm045">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_pwd_2"
            android:drawablePadding="@dimen/dm030"
            android:gravity="center"
            android:text="确认密码"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            style="@style/edit_style"
            android:hint="请确认密码"
            android:inputType="textPassword" />

    </LinearLayout>

    <TextView
        style="@style/text_style"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm100"
        android:text="保存" />

</LinearLayout>