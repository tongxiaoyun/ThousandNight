<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <com.risenb.thousandnight.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm088"
                android:layout_marginTop="@dimen/dm020"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm030"
                android:text="机构相册"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm028" />

            <include layout="@layout/line_1" />

            <com.risenb.thousandnight.views.MyRecyclerView
                android:id="@+id/mrv_organize_maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dm030"></com.risenb.thousandnight.views.MyRecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm020"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm088"
                    android:layout_marginLeft="@dimen/dm030"
                    android:layout_marginRight="@dimen/dm030"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm020"
                        android:text="机构名称:"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm026" />

                    <TextView
                        android:layout_width="@dimen/dm000"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="北京因联科技有限公司"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm026" />

                </LinearLayout>

                <include layout="@layout/line_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm025"
                    android:layout_marginLeft="@dimen/dm030"
                    android:layout_marginRight="@dimen/dm030"
                    android:layout_marginTop="@dimen/dm025"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm020"
                        android:text="机构简介:"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm026" />

                    <TextView
                        android:layout_width="@dimen/dm000"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="北京因联科技有限公司成立于2011年，致力于为传统企业提供互联网全案解决方案，包括互联网+转型战略咨询、电子商务就决方案、应用系统以及移动APP定制研发、产品运营等服务。"
                        android:textColor="@color/gray666"
                        android:textSize="@dimen/dm026" />

                </LinearLayout>

                <include layout="@layout/line_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm088"
                    android:layout_marginLeft="@dimen/dm030"
                    android:layout_marginRight="@dimen/dm030"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm020"
                        android:text="机构地址:"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm026" />

                    <TextView
                        android:layout_width="@dimen/dm000"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="北京市朝阳区长楹天街未来时"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm026" />

                </LinearLayout>

                <include layout="@layout/line_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm088"
                    android:layout_marginLeft="@dimen/dm030"
                    android:layout_marginRight="@dimen/dm030"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm020"
                        android:text="联系方式:"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm026" />

                    <TextView
                        android:layout_width="@dimen/dm000"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="135 4678 9898"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm026" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.risenb.thousandnight.views.MyScrollView>

    <TextView
        android:id="@+id/tv_maintenance_edit"
        style="@style/text_style"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:text="编辑" />

</LinearLayout>