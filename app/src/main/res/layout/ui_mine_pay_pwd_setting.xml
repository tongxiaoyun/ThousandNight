<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm098"
        android:layout_margin="@dimen/dm020"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm050"
        android:paddingRight="@dimen/dm045">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_phone"
            android:drawablePadding="@dimen/dm043"
            android:gravity="center"
            android:text="手机号"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_pay_pwd_phone"
            style="@style/edit_style"
            android:hint="请输入手机号"
            android:inputType="phone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm098"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm045"
        android:paddingRight="@dimen/dm020">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_code"
            android:drawablePadding="@dimen/dm030"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_pay_pwd_code"
            style="@style/edit_style"
            android:hint="请输入验证码"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tv_pay_pwd_code"
            android:layout_width="@dimen/dm160"
            android:layout_height="@dimen/dm050"
            android:background="@drawable/sp_purple_bg_cor"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/dm024" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm098"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm045"
        android:paddingRight="@dimen/dm045">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mine_pwd"
            android:drawablePadding="@dimen/dm034"
            android:gravity="center"
            android:text="密码    "
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm026" />

        <EditText
            android:id="@+id/et_pay_pwd_pwd"
            style="@style/edit_style"
            android:hint="请设置支付密码"
            android:inputType="textPassword"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay_pwd_save"
        style="@style/text_style"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm100"
        android:text="保存" />

</LinearLayout>