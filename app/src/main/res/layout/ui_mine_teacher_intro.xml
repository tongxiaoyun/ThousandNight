<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.risenb.thousandnight.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_teacher_intro_course"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm088"
                android:layout_marginLeft="@dimen/dm030"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dm030">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="课程"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm028" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm010"
                    android:drawableRight="@drawable/next"
                    android:text="15"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />

            </LinearLayout>

            <com.risenb.thousandnight.views.MyRecyclerView
                android:id="@+id/mrv_teacher_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"></com.risenb.thousandnight.views.MyRecyclerView>

            <include layout="@layout/line_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm030"
                android:layout_marginLeft="@dimen/dm030"
                android:layout_marginRight="@dimen/dm030"
                android:layout_marginTop="@dimen/dm025"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="介绍         "
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm026" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它。如果你无法简洁的表达你的想法，那只说明你还不够了解它。如果你无法简洁的表达你的想法，那只说明你还不够了解它。"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:layout_marginLeft="@dimen/dm165"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm088"
                android:layout_marginLeft="@dimen/dm030"
                android:layout_marginRight="@dimen/dm030"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老师特点"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm026" />

                <LinearLayout
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/tfl_teacher_intro_feature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        zhy:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/line_1" />

        </LinearLayout>

    </com.risenb.thousandnight.views.MyScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm088"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:background="@drawable/sp_purple_bd_cor"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/tab_color"
        android:textSize="@dimen/dm028" />

</LinearLayout>