<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <com.risenb.thousandnight.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm070"
                android:src="@drawable/pay_success" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dm080"
                android:layout_marginTop="@dimen/dm020"
                android:text="添加课程成功"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm028" />

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm085"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dm085"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dm020"
                    android:text="实付金额："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm028" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dm085"
                    android:gravity="center_vertical"
                    android:text="¥ 99.00"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/dm028" />

            </LinearLayout>

            <include layout="@layout/line_20" />

            <TextView
                android:layout_width="@dimen/dm230"
                android:layout_height="@dimen/dm060"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dm050"
                android:background="@drawable/sp_gray_bd_cor"
                android:gravity="center"
                android:text="返回首页"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/dm024" />


        </LinearLayout>
    </com.risenb.thousandnight.views.MyScrollView>


    <include layout="@layout/include_bottom" />
</LinearLayout>