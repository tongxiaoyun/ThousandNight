<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <com.risenb.thousandnight.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm025"
                    android:layout_marginTop="@dimen/dm025"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="拉丁舞教练"
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/dm030" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm030"
                        android:layout_marginLeft="@dimen/dm015"
                        android:background="@drawable/sp_purple_bd_cor"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dm005"
                        android:paddingRight="@dimen/dm005"
                        android:text="教练"
                        android:textColor="@color/tab_color"
                        android:textSize="@dimen/dm020" />

                    <View
                        android:layout_width="@dimen/dm000"
                        android:layout_height="@dimen/dm001"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm010"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="6K-10K"
                        android:textColor="@color/tab_color"
                        android:textSize="@dimen/dm026" />

                </LinearLayout>

                <include layout="@layout/line_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm040"
                    android:layout_marginTop="@dimen/dm040"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dm010"
                    android:maxLines="3"
                    android:text="职位信息展示为了热爱拉丁舞的爱好者设定，大赛分为3个阶段，每个阶段都会选出出众的3组，每个阶段都会选出出众的3组，每个阶段都会选出出众的3组，每个阶段都会选出出众的3组，每个阶段都会选出出众的3组"
                    android:textColor="@color/gray666"
                    android:textSize="@dimen/dm024" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm002"
                    android:background="@drawable/sp_line"
                    android:layerType="software" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm025"
                    android:layout_marginTop="@dimen/dm025"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dm000"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/found_adr"
                            android:drawablePadding="@dimen/dm010"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="北京"
                            android:textColor="@color/gray333"
                            android:textSize="@dimen/dm024" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dm000"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/found_time"
                            android:drawablePadding="@dimen/dm010"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="3-5年"
                            android:textColor="@color/gray333"
                            android:textSize="@dimen/dm024" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dm000"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/found_level"
                            android:drawablePadding="@dimen/dm010"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="专业级"
                            android:textColor="@color/gray333"
                            android:textSize="@dimen/dm024" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm002"
                    android:background="@drawable/sp_line"
                    android:layerType="software" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm020"
                android:text="求职信息"
                android:textColor="@color/gray333"
                android:textSize="@dimen/dm030" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm180"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:background="@drawable/sp_gray_bg_gray"
                android:gravity="left|top"
                android:hint="请输入求职的相关信息..."
                android:padding="@dimen/dm020"
                android:textColor="@color/gray333"
                android:textColorHint="@color/gray999"
                android:textSize="@dimen/dm024" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm460"
                android:layout_margin="@dimen/dm020">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/sp_gray_bg_gray">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/found_camata" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm020"
                            android:text="上传一段视频吧，有助于您求职成功哦！"
                            android:textColor="@color/gray999"
                            android:textSize="@dimen/dm022" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
    </com.risenb.thousandnight.views.MyScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:background="@color/tab_color"
        android:gravity="center"
        android:text="确认投递"
        android:textColor="@color/white"
        android:textSize="@dimen/dm030" />


    <include layout="@layout/include_bottom" />
</LinearLayout>