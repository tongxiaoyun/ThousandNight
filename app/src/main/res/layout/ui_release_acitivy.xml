<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ldefault_live" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#30000000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm050"
            android:layout_marginRight="@dimen/dm050"
            android:layout_marginTop="@dimen/dm700"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:layout_marginRight="@dimen/dm010"
                android:singleLine="true"
                android:text="请输入您想说的话..."
                android:textColor="@color/white"
                android:background="@color/translete"
                android:textColorHint="@color/white"
                android:textSize="@dimen/dm028" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:layout_marginTop="@dimen/dm010"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dm100">

            <TextView
                android:layout_width="@dimen/dm120"
                android:layout_height="@dimen/dm120"
                android:background="@drawable/sp_circler"
                android:gravity="center"
                android:text="拍摄"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/dm030" />

            <TextView
                android:layout_width="@dimen/dm120"
                android:layout_height="@dimen/dm120"
                android:layout_marginLeft="@dimen/dm230"
                android:background="@drawable/sp_circler"

                android:gravity="center"
                android:text="确认"
                android:textColor="@color/tab_color"
                android:textSize="@dimen/dm030" />
        </LinearLayout>


    </RelativeLayout>


    <include layout="@layout/include_bottom" />
</LinearLayout>