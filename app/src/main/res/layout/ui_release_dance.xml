<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <com.risenb.thousandnight.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm110"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舞伴："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm110"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="@dimen/dm090"
                        android:layout_height="@dimen/dm050"
                        android:background="@drawable/sl_dance"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="男士"
                        android:textColor="@color/sl_dance"
                        android:textSize="@dimen/dm026" />

                    <RadioButton
                        android:layout_width="@dimen/dm090"
                        android:layout_height="@dimen/dm050"
                        android:layout_marginLeft="@dimen/dm050"
                        android:background="@drawable/sl_dance"
                        android:button="@null"
                        android:gravity="center"
                        android:text="女士"
                        android:textColor="@color/sl_dance"
                        android:textSize="@dimen/dm026" />

                    <RadioButton
                        android:layout_width="@dimen/dm090"
                        android:layout_height="@dimen/dm050"
                        android:layout_marginLeft="@dimen/dm050"
                        android:background="@drawable/sl_dance"
                        android:button="@null"
                        android:gravity="center"
                        android:text="皆可"
                        android:textColor="@color/sl_dance"
                        android:textSize="@dimen/dm026" />
                </RadioGroup>

            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm135"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人数："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <EditText
                    android:layout_width="@dimen/dm000"
                    android:layout_height="@dimen/dm075"
                    android:layout_marginLeft="@dimen/dm070"
                    android:layout_marginRight="@dimen/dm020"
                    android:layout_weight="1"
                    android:background="@drawable/sp_gray_bg_gray"
                    android:gravity="center_vertical"
                    android:hint="请输入人数"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/gray333"
                    android:textColorHint="@color/gray999"
                    android:textSize="@dimen/dm030" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />

            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="舞种："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="请选择舞种"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="级别："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="不限"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm135"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <EditText
                    android:layout_width="@dimen/dm000"
                    android:layout_height="@dimen/dm075"
                    android:layout_marginLeft="@dimen/dm070"
                    android:layout_weight="1"
                    android:background="@drawable/sp_gray_bg_gray"
                    android:gravity="center_vertical"
                    android:hint="请输入标题名称"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/gray333"
                    android:textColorHint="@color/gray999"
                    android:textSize="@dimen/dm030" />


            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm245"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <EditText
                    android:layout_width="@dimen/dm000"
                    android:layout_height="@dimen/dm180"
                    android:layout_marginLeft="@dimen/dm070"
                    android:layout_weight="1"
                    android:background="@drawable/sp_gray_bg_gray"
                    android:gravity="center_vertical"
                    android:hint="请输入标题名称"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/gray333"
                    android:textColorHint="@color/gray999"
                    android:textSize="@dimen/dm030" />


            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="所在位置："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mark_gray" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm030"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="点击选择"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm135"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <EditText
                    android:layout_width="@dimen/dm000"
                    android:layout_height="@dimen/dm075"
                    android:layout_marginLeft="@dimen/dm010"
                    android:layout_weight="1"
                    android:background="@drawable/sp_gray_bg_gray"
                    android:gravity="center_vertical"
                    android:hint="请输入标题名称"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/gray333"
                    android:textColorHint="@color/gray999"
                    android:textSize="@dimen/dm030" />


            </LinearLayout>

            <include layout="@layout/line_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm030"
                    android:text="期望日期："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm175"
                    android:layout_marginLeft="@dimen/dm010"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm000"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/course_more"
                        android:gravity="center_vertical"
                        android:text="2018年11月20日 9点"
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/dm024" />

                    <include layout="@layout/line_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm000"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/course_more"
                        android:gravity="center_vertical"
                        android:text="请选择截止日期"
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/dm024" />
                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/line_1" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:layout_marginBottom="@dimen/dm100"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_marginTop="@dimen/dm080"
                android:background="@drawable/sp_purple_bg_cor"
                android:gravity="center"
                android:text="确认直播"
                android:textColor="@color/white"
                android:textSize="@dimen/dm030" />


        </LinearLayout>
    </com.risenb.thousandnight.views.MyScrollView>


    <include layout="@layout/include_bottom" />
</LinearLayout>