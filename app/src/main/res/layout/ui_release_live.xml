<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <com.risenb.thousandnight.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/dm030" />

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="直播分类："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="请选择直播分类"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />
            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/tab_color"
                    android:textSize="@dimen/dm030" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播标题："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm064"
                    android:background="@drawable/sp_gray_bg_gray"
                    android:hint="请输入直播标题"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/gray333"
                    android:textColorHint="@color/gray999"
                    android:textSize="@dimen/dm028" />

            </LinearLayout>


        </LinearLayout>
    </com.risenb.thousandnight.views.MyScrollView>


    <TextView
        android:id="@+id/tv_release_live_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm090"
        android:layout_marginBottom="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@color/tab_color"
        android:gravity="center"
        android:text="确认直播"
        android:textColor="@color/white"
        android:textSize="@dimen/dm030" />


    <include layout="@layout/include_bottom" />
</LinearLayout>