<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <com.risenb.thousandnight.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm135"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位名称："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <EditText
                    android:layout_width="@dimen/dm000"
                    android:layout_height="@dimen/dm075"
                    android:layout_marginLeft="@dimen/dm010"
                    android:layout_weight="1"
                    android:background="@drawable/sp_gray_bg_gray"
                    android:gravity="center_vertical"
                    android:hint="请输入职位名称"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/gray333"
                    android:textColorHint="@color/gray999"
                    android:textSize="@dimen/dm030" />


            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="职位类型："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="请选择职位类型"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="工作年限："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="请选择工作年限"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <include layout="@layout/line_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="职位等级："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="请选择职位等级"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <include layout="@layout/line_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="@dimen/dm000"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="工作地点："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dm020"
                    android:drawableRight="@drawable/course_more"
                    android:text="请选择所在城市"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm030"
                    android:text="期望日期："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm225"
                    android:layout_marginLeft="@dimen/dm010"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm000"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/sl_check"
                            android:drawablePadding="@dimen/dm020"
                            android:text="范围"
                            android:textColor="@color/gray333"
                            android:textSize="@dimen/dm030" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm080"
                            android:background="@color/white"
                            android:button="@null"
                            android:drawableLeft="@drawable/sl_check"
                            android:drawablePadding="@dimen/dm020"
                            android:text="面议"
                            android:textColor="@color/gray333"
                            android:textSize="@dimen/dm030" />
                    </RadioGroup>

                    <include layout="@layout/line_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm000"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="@dimen/dm000"
                            android:layout_height="@dimen/dm075"
                            android:layout_marginLeft="@dimen/dm010"
                            android:layout_weight="1"
                            android:background="@drawable/sp_gray_bg_gray"
                            android:gravity="center_vertical"
                            android:hint="请输入薪资"
                            android:paddingLeft="@dimen/dm020"
                            android:paddingRight="@dimen/dm020"
                            android:textColor="@color/gray333"
                            android:textColorHint="@color/gray999"
                            android:textSize="@dimen/dm030" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm020"
                            android:layout_marginRight="@dimen/dm020"
                            android:text="——"
                            android:textColor="@color/gray333" />

                        <EditText
                            android:layout_width="@dimen/dm000"
                            android:layout_height="@dimen/dm075"
                            android:layout_weight="1"
                            android:background="@drawable/sp_gray_bg_gray"
                            android:gravity="center_vertical"
                            android:hint="请输入薪资"
                            android:paddingLeft="@dimen/dm020"
                            android:paddingRight="@dimen/dm020"
                            android:textColor="@color/gray333"
                            android:textColorHint="@color/gray999"
                            android:textSize="@dimen/dm030" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm020"
                            android:text="元"
                            android:textColor="@color/gray333" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <include layout="@layout/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm245"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm050"
                    android:text="职位描述："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/dm030" />


                <EditText
                    android:layout_width="@dimen/dm000"
                    android:layout_height="@dimen/dm180"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dm010"
                    android:layout_weight="1"
                    android:background="@drawable/sp_gray_bg_gray"
                    android:gravity="left"
                    android:hint="请输入描述信息"
                    android:padding="@dimen/dm020"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/gray333"
                    android:textColorHint="@color/gray999"
                    android:textSize="@dimen/dm030" />


            </LinearLayout>

            <include layout="@layout/line_1" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm090"
                android:layout_marginBottom="@dimen/dm100"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_marginTop="@dimen/dm080"
                android:background="@drawable/sp_purple_bg_cor"
                android:gravity="center"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="@dimen/dm030" />

        </LinearLayout>
    </com.risenb.thousandnight.views.MyScrollView>


    <include layout="@layout/include_bottom" />
</LinearLayout>