<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_top" />

    <include layout="@layout/include_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm170"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/course_vip" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select_course"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_select_course_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全选"
            android:textColor="@color/gray333"
            android:textSize="@dimen/dm030" />

        <View
            android:layout_width="@dimen/dm001"
            android:layout_height="@dimen/dm070"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <TextView
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下载"
            android:textColor="@color/tab_color"
            android:textSize="@dimen/dm030" />
    </LinearLayout>


    <include layout="@layout/include_bottom" />
</LinearLayout>