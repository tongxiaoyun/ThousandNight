<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm010"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm085"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_video_look"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_video_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/home_video_down"
                android:text="观看量"
                android:textColor="@color/gray666"
                android:textSize="@dimen/dm026" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_video_comment"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_video_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/home_video_down"
                android:text="评论量"
                android:textColor="@color/gray666"
                android:textSize="@dimen/dm026" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_video_time"
            android:layout_width="@dimen/dm000"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dm010"
                android:drawableRight="@drawable/home_video_down"
                android:text="时间"
                android:textColor="@color/gray666"
                android:textSize="@dimen/dm026" />

        </RelativeLayout>

    </LinearLayout>

    <com.risenb.expand.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_video_child"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm000"
        android:layout_weight="1" />

</LinearLayout>